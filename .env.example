# Slack (create app at https://api.slack.com/apps)
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token

# Emoji that triggers the flow (name only, without colons)
TRIGGER_EMOJI=basecamp

# OpenAI
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4o-mini

# Basecamp 3 API (OAuth 2.0 from https://launchpad.37signals.com)
BASECAMP_ACCOUNT_ID=your-account-id
BASECAMP_PROJECT_ID=your-project-id
BASECAMP_TODOLIST_ID=your-todolist-id

# Option A: Manual token (no auto-refresh). Set BASECAMP_ACCESS_TOKEN.
# Option B: Auto-refresh. Set CLIENT_ID + CLIENT_SECRET, then run: node scripts/basecamp-oauth.js
BASECAMP_ACCESS_TOKEN=your-access-token
BASECAMP_CLIENT_ID=your-client-id
BASECAMP_CLIENT_SECRET=your-client-secret
BASECAMP_REDIRECT_URI=http://localhost:3456/callback
BASECAMP_TOKEN_FILE=basecamp-tokens.json
BASECAMP_REFRESH_TOKEN=your-refresh-token

# Optional: add thread participants as subscribers on the BC task (true/false)
BASECAMP_ADD_PARTICIPANTS_AS_SUBSCRIBERS=false

# Optional: path to custom extraction prompt (default: built-in prompt)
EXTRACTION_PROMPT_FILE=./prompts/extract-issue.txt
